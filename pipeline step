- task: PowerShell@2
  displayName: 'Append build version to InvestcoRemoteUrl'
  inputs:
    targetType: 'inline'
    script: |
      $originalUrl = "$(InvestcoRemoteUrl)"
      $versionedUrl = "$originalUrl?v=$(Build.BuildNumber)"
      Write-Host "##vso[task.setvariable variable=InvestcoRemoteUrl]$versionedUrl"